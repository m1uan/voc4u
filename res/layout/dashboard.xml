<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="#FFFFFF">
	<ImageView 
	    android:padding="15dp"
	    android:paddingBottom="3dp"
	    android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:src="@drawable/bg_logo"
		android:layout_centerHorizontal="true"
		android:layout_alignParentBottom="true"
				/>
		<Button
			android:id="@+id/trainButton"
			android:layout_width="225dp"
			android:layout_height="90dp"
			android:text="@string/btn_train"
			android:textColor="@color/blue_button_text"
			android:layout_centerHorizontal="true"
			android:onClick="onTrainButton" 
			android:layout_marginTop="40dp"
			android:padding="0dp"
			android:background="@drawable/btn_train"
			android:textSize="30sp"
			 />
			
<!--			 <Button-->
<!--			android:id="@+id/menuDictionary"-->
<!--			android:layout_width="fill_parent"-->
<!--			android:layout_height="wrap_content"-->
<!--			android:text="Setting"-->
<!--			android:onClick="onSettingButton" -->
<!--			 />-->
	<LinearLayout
				android:orientation="horizontal"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="5dp"
				android:layout_centerHorizontal="true"
				android:layout_below="@id/trainButton">
				<Button
					android:id="@+id/speakerButton"
					android:layout_width="90dp"
					android:layout_height="90dp"
					android:text=""
					android:onClick="onSpeakerButton"
					android:layout_margin="5dp"
					android:background="@drawable/btn_speaker"
					 />
				<Button
					android:id="@+id/speechButton"
					android:layout_width="90dp"
					android:layout_height="90dp"
					android:text=""
					android:onClick="onSpeechButton"
					android:layout_margin="5dp" 
					android:background="@drawable/btn_listener"
					 />
			</LinearLayout>
			
	
</RelativeLayout>
