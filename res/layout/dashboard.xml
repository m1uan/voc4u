<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="#FFFFFF">
	
    <RelativeLayout
        android:id="@+id/infoPanel"
        android:layout_width="fill_parent"
		android:layout_height="70dp"
		android:background="@color/control_panel"
		android:layout_alignParentTop="true"
		android:padding="5dp"
		>"
	
	
	
			<TextView 
			    android:visibility="invisible"
			    android:id="@+id/numOfWordsDesc"
			    android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="0dp"
				android:layout_margin="0dp"
				android:padding="0dp"
				android:textStyle="bold"
				android:text="know/dont know" 
				android:layout_centerHorizontal="true"/>
	    	<TextView 
	    	    android:visibility="invisible"
	    	    android:id="@+id/numOfWords"
	    	    android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="30sp"
				android:textStyle="bold"
				android:layout_margin="0dp"
				android:layout_marginBottom="0dp"
				android:padding="0dp"
				android:textColor="#fcff0f"
			    android:text="60/100"
			    android:layout_centerHorizontal="true"
			    android:layout_below="@id/numOfWordsDesc"/>
	    	
	    	
	</RelativeLayout>
			
		<Button
			android:id="@+id/trainButton"
			android:layout_width="225dp"
			android:layout_height="90dp"
			android:text="@string/btn_train"
			android:textColor="@color/blue_button_text"
			android:layout_centerHorizontal="true"
			android:onClick="onTrainButton" 
			android:background="@drawable/btn_train"
			android:layout_marginTop="110dp"
			android:padding="10dp"
			android:textSize="25sp"
			
			
			 />
			
<!--			 <Button-->
<!--			android:id="@+id/menuDictionary"-->
<!--			android:layout_width="fill_parent"-->
<!--			android:layout_height="wrap_content"-->
<!--			android:text="Setting"-->
<!--			android:onClick="onSettingButton" -->
<!--			 />-->
	<LinearLayout
				android:orientation="horizontal"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="0dp"
				android:layout_centerHorizontal="true"
				android:layout_below="@id/trainButton">
				<Button
					android:id="@+id/speakerButton"
					android:layout_width="90dp"
					android:layout_height="90dp"
					android:text=""
					android:onClick="onSpeakerButton"
					android:background="@drawable/btn_speaker"
					android:layout_margin="1dp"
					 />
				<Button
					android:id="@+id/speechButton"
					android:layout_width="90dp"
					android:layout_height="90dp"
					android:text=""
					android:onClick="onSpeechButton"
					android:background="@drawable/btn_listener"
					android:layout_marginTop="1dp"
					
					 />
			</LinearLayout>
			
	<ImageView 
	    android:layout_width="150dp"
		android:layout_height="150dp"
		android:scaleType="centerInside"
		android:src="@drawable/bg_logo2"
		android:layout_centerHorizontal="true"
		android:layout_alignParentBottom="true"
		
				/>
</RelativeLayout>
