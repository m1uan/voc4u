<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ddffffff"
    android:orientation="vertical"
    android:layout_margin="8dp"
    android:padding="2dp"
    android:id="@+id/widget_layout" >

    <LinearLayout
        android:id="@+id/word"
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:background="@color/control_panel"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/flag"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_en"
            android:visibility="visible" />

        <TextView
            android:id="@+id/wordTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/blue_button_text"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>
    
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/info"
        android:textColor="#ff0000"
        android:padding="10dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:text="@string/information_init"
        android:visibility="gone" />
    <!--
         <com.voc4u.train.LastItem
	     android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             />
    -->

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:orientation="vertical"
        android:padding="5dp"
        android:id="@+id/word_1" >

        <TextView
            android:id="@+id/text1_1"
            style="@style/LastItemText"
            android:layout_alignParentLeft="true"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" >
            <TextView
                android:id="@+id/text2_1"
                style="@style/LastItemText" />
        </LinearLayout>
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:orientation="vertical"
        android:padding="5dp"
        android:id="@+id/word_2" >

        <TextView
            android:id="@+id/text1_2"
            style="@style/LastItemText"
            android:layout_alignParentLeft="true"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" >
            <TextView
                android:id="@+id/text2_2"
                style="@style/LastItemText" />
        </LinearLayout>
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:orientation="vertical"
        android:padding="5dp"
        android:id="@+id/word_3" >

        <TextView
            android:id="@+id/text1_3"
            style="@style/LastItemText"
            android:layout_alignParentLeft="true"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" >
            <TextView
                android:id="@+id/text2_3"
                style="@style/LastItemText" />
        </LinearLayout>
    </RelativeLayout>
    
    
"
    

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:orientation="horizontal"
        android:padding="1dp" >

        <Button
            android:id="@+id/dontKnowButton"
            style="@style/ButtonKnows"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="@drawable/btn_know_2"
            android:text="@string/btn_dontknow" />

        <Button
            android:id="@+id/nextButton"
            style="@style/ButtonKnows"
            android:layout_weight="1"
            android:background="@drawable/btn_know_1"
            android:text="@string/btn_know" />
    </LinearLayout>

</LinearLayout>