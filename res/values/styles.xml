<?xml version="1.0" encoding="utf-8"?>
<resources>
       <style name="LastItemText">
    	<item name="android:layout_width">wrap_content</item>
    	<item name="android:layout_height">wrap_content</item>
    	<item name="android:layout_margin">0dp</item>
    	<item name="android:layout_centerVertical">true</item>
    	<item name="android:padding">0dp</item>
    	<item name="android:text"></item>
    	<item name="android:textColor">@color/last_item_color_text</item>
	</style>
    <style name="ButtonKnows">
    	<item name="android:layout_width">fill_parent</item>
    	<item name="android:layout_height">wrap_content</item>
    	<item name="android:layout_margin">0dp</item>
    	<item name="android:padding">15dp</item>
    	<item name="android:background">@drawable/btn_know</item>
    	<item name="android:textColor">@color/blue_button_text</item>
	</style>
	<style name="CustomTheme" parent="android:Theme.Light">
	    <item name="android:windowNoTitle">true</item>
    	<item name="android:windowBackground">@color/custom_theme_color</item>
    	<item name="android:colorBackground">@color/custom_theme_color</item>
	</style>
</resources>
